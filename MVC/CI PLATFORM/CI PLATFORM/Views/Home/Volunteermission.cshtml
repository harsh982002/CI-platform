                                     aria-valuemax="100" style="height:8px">
                                    <div class="progress-bar" style="width: 75%; background-color: orange;"></div>
                                </div>
                                <span class="light-gray fs-fourteen mt-2">@Model.Missions.TotalSeats</span>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class=" d-flex flex-wrap">
                             <button type="submit" onclick="Add(@Model.Missions.MissionId,@Accesor?.HttpContext?.Session.GetString("UserId"))" class="rounded-pill border bg-white" style="flex: 45%;><i class="bi bi-heart-fill" id="addToFav"></i> Add to favourite</button>
@*                        <button class="rounded-pill border me-2 " type="submit"  style="flex: 45%;">
                            <i class="fa fa-square px-2"></i>Recommend
                            to a Co-Worker
                        </button>*@

                        <button type="button" class="main-btn btn rounded-pill border-bottom rounded-pill me-2 border" data-bs-toggle="modal" data-bs-target="#exampleModal" style="flex: 45%;">
                                @*data-url="@Url.Action(" SuggestCoWorker", "Platform" ,new{id=Model.MissionId})">*@

                            <i class="fa fa-square px-2"></i> Recommend to a
                            Co-Worker
                        </button>

                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                                <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Recommend to a Co-Worker</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <table class=table>
                                                <thead>
                                                    <tr>
                                                        <th>Mark/UnMark</th>
                                                        <th>Name</th>
                                                        <th>Email</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in @Model.users )
                                                    {
                                                        <tr>
                                                            <td><input class="form-check-input" type="checkbox" value="@item.UserId" name="email" id="@item.Email"><td>
                                                            <td>@item.FirstName</td>
                                                            <td> <label class="form-check-lable" for="@item.Email">@item.Email</label></td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary"  onclick="sendMail(@Model.Missions.MissionId)">Send Mail</button>
                                        </div>
                                </div>
                            </div>
                        </div>

                    </div>


                       <div class="row text-center">
                    <div class="ratings mt-3">
                        @if (true)
                        {
                            for (var j = 0; j < (@Model.Rating); j++)
                            {
                                <i class="bi bi-star-fill checked" style="color:#F8D441"></i>
                            }
                            for (var j = 0; j < 5 - (@Model.Rating); j++)
                            {
                                <i class="bi bi-star"></i>
                            }

                        }
                    </div>
                </div>
                    


                    <div class=" d-flex flex-wrap justify-content-evenly mt-4">
                        <div class="border me-1 flex-fill">
                            <div class="ms-3">
                                <!-- <img src="" alt="" class=""> -->
                                <img src="/images/pin1.png" alt="" class="">
                                <div class="mt-3">
                                    <div>city</div>
                                    <div>@Model.Missions.City.Name</div>
                                </div>
                            </div>
                        </div>
                        <div class="border me-1 flex-fill">
                            <div class="ms-3">
                                <!-- <img src="" alt="" class=""> -->
                                <img src="/images/web.png" alt="" class="">
                                <div class="mt-3">
                                    <div>Theme</div>
                                    <div>@Model.Missions.Theme.Title</div>
                                </div>
                            </div>
                        </div>
                        <div class="border me-1 flex-fill">
                            <div class="ms-3">
                                <!-- <img src="" alt="" class=""> -->
                                <img src="/images/calender.png" alt="" class="">
                                <div class="mt-3">
                                    <div>Date</div>
                                    <div>@Model.Missions.Deadline.Value.Day/@Model.Missions.Deadline.Value.Month/@Model.Missions.Deadline.Value.Year</div>
                                </div>
                            </div>
                        </div>
                        <div class="border me-1 flex-fill">
                            <div class="ms-3">
                                <!-- <img src="" alt="" class=""> -->
                                <img src="/images/organization.png" alt="" class="">
                                <div class="mt-3">
                                    <div>Organization</div>
                                    <div>@Model.Missions.OrganizationName</div>
                                </div>
                            </div>
                        </div>
                    </div>




                    <div class="d-flex justify-content-center mt-5 " id="apply-btn">
                        <button type="submit" value="Apply" onclick="ApplyMission(@Model.Missions.MissionId,@Accesor?.HttpContext?.Session.GetString("UserId"))"
                                class="applyButton bg-white" style="border: 2px solid #F88634; border-radius: 24px" id="volunteer-status">
                            Apply now
                            <img src="/images/right-arrow.png" class="ms-2" />
                        </button>
                    </div>

                </div>

            </div>
        </div>
        <div class="main2 mt-4 row" style="border: none;">


            <div class="card col-lg-8" style="border: none;">
                <div class="card-body">
                    <div class="container" style="margin-top: 10px;">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a class="nav-link active text-decoration-none border-0 navitem text-black"
                                    data-bs-toggle="tab"
                                   href="#msg">Mission</a>
                            </li>
                            <li class="nav-item">
                                <a  data-bs-toggle="tab"
                                   class="nav-link text-decoration-none border-0 navitem text-black" data-bs-toggle="tab"
                                   href="#pro">Organization</a>
                            </li>
                            <li class="nav-item">
                                <a  data-bs-toggle="tab"
                                   class="nav-link text-decoration-none border-0 navitem text-black" data-bs-toggle="tab"
                                   href="#set">Comment</a>
                            </li>
                        </ul>

                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div class="tab-pane container active " id="msg" >

                                <h5 class="py-3" style="font-size: 25px;">Introduction</h5>
                                <p class="m-2 intro" >
                                    @Model.Missions.Description
                                </p>

                                <h5 class="py-3" style="font-size: 25px;">Challenge</h5>
                                <p class="challenge">
                                    @Model.Missions.ShortDescription
                                </p>

                                <h5 class="py-3" style="font-size: 25px;">Documents</h5>
                                <div class="row">
                                    <div class=" col border rounded-pill  d-flex align-items-center doc"
                                         >
                                        <img src="images/doc.png" alt="">
                                        <span class="ms-2">lorem-ipsum.pdf</span>
                                    </div>

    

                                </div>



                            </div>

                            <div class="tab-pane container fade border" id="pro">

                                


                                <h5 class="py-3" style="font-size: 25px;">About Organization</h5>
                                <p class="m-2 org">
                                   @Model.Missions.OrganizationDetail
                                </p>



                            </div>
                            <div class="tab-pane container fade border" id="set">

                                    <label for="comment">Comment</label>
                                    <textarea id="user-comment" class=" w-100" placeholder="Enter Your Comments.." rows="4"
                                              required></textarea>
                                    <button class="bg-white  mt-3 border   border-warning rounded-pill" type="submit"
                                            style="color: orange;    flex-grow: 1;" onclick="AddComments(@Model.Missions.MissionId,@Accesor?.HttpContext?.Session.GetString("UserId"))">
                                        Post comment
                                    </button>
                                    <p id="comment-status"></p>

                             




                                <div class="overflow-auto mt-2" style="background-color: #f2f2f2">


                                    <div class="bg-white card ms-3 me-3 mt-1">
                                        @if (@Model.Missions.Comments != null)
                                        {
                                            @foreach (var item in @Model.Missions.Comments)
                                            {
                                                <div class="card-body">
                                                    <div class="d-flex">
                                                        <div>
                                                            <img src="/images/volunteer1.png" class="rounded-circle" alt="">
                                                        </div>
                                                        <div class="d-flex ms-2 flex-column justify-content-center">
                                                            <div>@item.User.FirstName @item.User.LastName</div>
                                                            <div>@item.CreatedAt</div>
                                                        </div>
                                                    </div>
                                                    <div class="mt-2">
                                                        @item.Comment1
                                                    </div>

                                                </div>
                                            }
                                        }
                                    </div>

                                    

                                </div>
                               

                            </div>

                        </div>

                    </div>


                </div>
            </div>

            <div class="d-flex  col-lg-4 flex-column height ">

                <div class="border">
                    <div class="card">

                        <div class="card-body">

                            <ul class="nav nav-tabs card-title ">
                                <li class="nav-item">
                                    <div class="nav-link text-black  text-decoration-none border-0 ps-0 information"
                                         >
                                        Information
                                    </div>
                                </li>
                            </ul>

                            <div class="table-responsive">
                                <table class="table align-middle mb-0">
                                    <thead>
                                        <tr>
                                            <td class="py-3">Skills</td>
                                            
                                            <td class="py-3">
                                                 @foreach (var i in @Model.Missions.MissionSkills)
                                                     {
                                                        @i.Skill.SkillName <span>,</span>
                                                      }
                                            </td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="py-3">Days</td>
                                            <td class="py-3">@Model.Missions.Availability</td>
                                        </tr>
                                        <tr>
                                            <td class="py-3 border-bottom-0 ">Rating</td>
                                            <td class="py-3 border-bottom-0 ">
                                                @if (true)
                                    {
                                        for (var j = 0; j < (@Model.Rating); j++)
                                        {
                                            <i class="bi bi-star-fill checked" style="color:#F8D441"></i>
                                        }
                                        for (var j = 0; j < 5 - (@Model.Rating); j++)
                                        {
                                            <i class="bi bi-star"></i>
                                        }

                                    }<span class="px-2 ">
                                                    (by @Model.RatingUser
                                                    volunteers)
                                                </span>
                                            </td>


                                        </tr>
                                    </tbody>
                                </table>
                            </div>



                        </div>
                    </div>
                </div>

                <div class="border mt-4 ">
                    <div class="card">

                        <div class="card-body">
                            <ul class="nav nav-tabs card-title ">
                                <li class="nav-item">
                                    <div class="nav-link active text-decoration-none border-0 ps-0 recents"
                                         >
                                        Recent
                                        Volunteer
                                    </div>
                                </li>
                            </ul>
                        </div>






                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div class="tab-pane container active " id="previous">
                                
                                <div class="card-body row justify-content-center">
                                    @if (@Model.Missions.MissionApplications != null)
                                    {
                                    @foreach(var item in @Model.Missions.MissionApplications)
                                    {
                                    <div class="d-flex col-3 flex-column m-1 justify-content-center">
                                        <img src="@item.User.Avatar" alt="" class="rounded-circle" >
                                        <div class="text-center">@item.User.FirstName @item.User.LastName</div>
                                    </div>
  }
                                }
                                    
                                </div>
                              
                            </div>


                           

                        </div>

                    </div>
                    <ul class="nav nav-tabs">
                        <li class="nav-item border">
                            <a class="nav-link active border-0 " data-bs-toggle="tab" href="#previous">
                                <<
                            </a>
                        </li>
                        <li class="border flex-fill d-flex justify-content-center align-items-center">
