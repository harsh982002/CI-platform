@{
    ViewData["Title"] = "Reset Password Page";
}
@{
    Layout = null;
}
@model CIPlatform.Entities.ViewModel.ResetPasswordViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <environment include="Development">
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/style.css">
        <script src="/js/bootstrap.bundle.min.js"></script>
    </environment>
</head>
<body>
    <div class="row">
        <div class="col-md-8 col-sm-7">
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-interval="false">
               <div class="carousel-indicators">
                    @{

                        int count = 0;
                        foreach (var item in @ViewBag.bannerlist)
                        {

                            @if (count == 0)
                            {
                                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to=@count class="active" aria-current="true" aria-label="Slide 0"></button>
                                count++;
                            }
                            else
                            {
                                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to=@count aria-label="Slide @count"></button>
                                count++;
                            }


                        }

                    }
                </div>
                <div class="carousel-inner">
                    @{
                        foreach (var item in @ViewBag.bannerlist)
                        {
                                                    <div class="carousel-item active">
                                                        <img src="~/images/@item.Image" class="d-block" alt="...">
                                                        <div class="carousel-caption d-md-block">

                                                            <p>@item.Text </p>
                                                        </div>
                                                    </div>
                        }
                    }

                </div>

            </div>
        </div>
        <div class="login col-md-4 col-sm-5">
            <div class="login-details">
                <div class="toregister text-center mt-3">
                    <span>New Password</span>
                    <p class="mt-2" style="color: #414141; font-size:13px">
                        Please enter a new password in the feilds below
                    </p>
                </div>
                <form method="post">
                    <label asp-for="Password" class="form-label">New Password</label>
                    <input asp-for="Password" type="password"
                           class="form-control"
                           id="n-password" />
                    <span asp-validation-for="Password" class="text-danger d-block"></span>
                    <label asp-for="ConfirmPassword" class="form-label mt-3">Confirm New Password</label>
                    <input asp-for="ConfirmPassword" type="password"
                           class="form-control"
                           id="cn-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger d-block"></span>
                    <button type="submit" class="btn mt-4">Change Password</button>
                </form>
                <div class="tologin mt-3">
                    <a asp-action="Login">Login</a>
                </div>
                <div class="privacy text-center">
                <a href="/Home/Privacy" class="privacy">Privacy Policy</a>
            </div>
            </div>
        </div>
    </div>
    @section scripts{
    @{
                    <partial name="_ValidationScriptsPartial" />
    }
    }
</body>
</html>