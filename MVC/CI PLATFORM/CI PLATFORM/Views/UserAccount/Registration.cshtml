@using CIPlatform.Entitites.Models
@{
    ViewData["Title"] = "Registration page";
}
@{
    Layout = null;
}
@model CIPlatform.Entities.ViewModel.RegistrationViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <environment include="Development">
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/style.css">
        <script src="/js/bootstrap.bundle.min.js"></script>
    </environment>
</head>
<body>
    <div class="row">
        <div class="col-md-8 col-sm-7">
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-interval="false">
                <div class="carousel-indicators">
                @{
                    
                    int count = 0;
                    foreach (var item in @ViewBag.bannerlist)
                    {
                        
                            @if (count == 0)
                            {
                                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to=@count class="active" aria-current="true" aria-label="Slide 0"></button>
                                count++;
                            }
                            else
                            {
                                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to=@count aria-label="Slide @count"></button>
                                 count++;
                            }
                        
                               
                    }

                }
                </div>
                <div class="carousel-inner">
                    @{
                        foreach (var item in @ViewBag.bannerlist)
                        {
                            <div class="carousel-item active">
                                <img src="~/images/@item.Image" class="d-block" alt="...">
                                <div class="carousel-caption d-md-block">

                                    <p>@item.Text </p>
                                </div>
                            </div>
                        }
                    }

                </div>

            </div>
        </div>
        <div class="login col-md-4 col-sm-5">
            <div class="login-details">
                <form asp-action="Registration" method="post">
                    <label asp-for="FirstName" class="form-label mt-2">First Name</label>
                    <input asp-for="FirstName" type="text" class="form-control" id="f-name" />
                    <span asp-validation-for="FirstName" class="text-danger d-block"></span>
                    <label asp-for="LastName" class="form-label mt-2">Last Name</label>
                    <input asp-for="LastName" type="text" class="form-control" id="l-name" />
                    <span asp-validation-for="LastName" class="text-danger d-block"></span>
                    <label asp-for="PhoneNumber" class="form-label mt-2">Phone Number</label>
                    <input asp-for="PhoneNumber" type="tel" class="form-control" id="phone" />
                    <span asp-validation-for="PhoneNumber" class="text-danger d-block"></span>
                    <label asp-for="Email" class="form-label mt-2">Email address</label>
                    <input asp-for="Email" type="email"
                           class="form-control"
                           id="email"
                           aria-describedby="emailHelp" />
                    <span asp-validation-for="Email" class="text-danger d-block"></span>
                    <label asp-for="Password" class="form-label mt-2">Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="password" />
                    <span asp-validation-for="Password" class="text-danger d-block"></span>
                    <label asp-for="ConfirmPassword" class="form-label mt-2">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="c-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger d-block"></span>
                    <button type="submit" class="btn mt-4">Register</button>
                </form>
                @if (ViewBag.Message != null)
                {
                    <script type="text/javascript">

                        window.onload = function () {
                            alert("@ViewBag.Message");
                        };
                    </script>
                }
                <div class="toregister text-center mt-2">
                    <a class="l-password" asp-action="Forgotpassword">Lost Your Password?</a>
                    <p class="mt-2">
                        Already registered?<a asp-action="Login" style="text-decoration: none">Login now</a>
                    </p>
                </div>
            </div>
            <div class="r-privacy text-center">
                <a href="/Home/Privacy" class="r-privacy" style="text-decoration: none;color: #414141;">Privacy Policy</a>
            </div>
        </div>
    </div>
    @section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }
</body>

</html>