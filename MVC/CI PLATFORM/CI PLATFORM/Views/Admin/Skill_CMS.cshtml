@{
    ViewData["title"] = "Admin";
             <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" asp-append-version="true" />
    ViewData["css"] = "Volunteering_Timesheet.css";
}
@model  CIPlatform.Entitites.ViewModel.SkillViewModel
<div class="row w-100" style="height:90vh;">
    <div class="col-lg-3 col-md-3 navigation col-sm-3">
        <partial name="Navigation_partial" />
    </div>
    <div class="col-lg-9 col-md-9 col-sm-9">
        <div class="container mt-5 ">
            <div class="border-bottom">
                <h5>Skill</h5>
            </div>
            <div class="d-flex mt-3 justify-content-between align-items-center">
                <div class="d-flex search-div align-items-center">
                    <img class="search" src="~/images/search.png" alt="not load" />
                    <div class="form-floating w-75 d-flex">
                        <input type="search" class="form-control search-input" id="floatingSearch" placeholder="Search Themes...." />
                        <label for="floatingSearch" class="d-flex align-items-center">Search Themes....</label>
                    </div>
                </div>
                <button class="btn applybutton d-flex justify-content-between align-items-center" onclick="clearSkillModal()" data-bs-toggle="modal" data-bs-target="#Add">
                    <img src="~/images/plus.png" class="me-2" style="height:13px;" /><span>Add</span>
                </button>
            </div>

            <div class="w-100" style="overflow-x:auto;">
                <table id="example" class="table border border-bottom-0 h-100  table-responsive">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Skill</th>
                            <th scope="col">Status</th>
                            <th scope="col">Action</th>



                        </tr>
                    </thead>
                    <tbody>
                            @{
                            foreach (var item in Model.SkillList)
                            {
                            <tr id='skill-@item.SkillId'>
                            <td >@item.SkillName</td>
                            @if (item.Status is 1)
                            {
                            <td   ><span style="color:#02f702">Approved</span></td>
                            }
                            else{
                            <td  ><span style="color:red">Not Approved</span></td>
                            }
                            <td><img data-bs-toggle="modal" onclick="EditSkill('@item.SkillId','@item.SkillName','@item.Status','edit-skill')" data-bs-target="#Add" src="~/images/edit.png" class="edbutton" alt=""/>
                            <img data-bs-toggle="modal" onclick="getskill(@item.SkillId)" data-bs-target="#delete" src="~/images/bin.png"  class="ms-2 edbutton" alt="" /></td>
                            </tr>
                            }
                            }
                        
                    </tbody>
                </table>
            </div>
@*            <partial name="Pagination_partial" />*@
        </div>
    </div>
    <div class="mobile-navigation">
        <partial name="Mobile_Navigation_partial" />
    </div>
</div>

@*for delete*@


<!-- Modal -->
<div class="modal fade" id="delete">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Skill</h5>
            </div>
            <div class="modal-body">
                <p>Are you sure? You want to delete the Skill?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn applybutton" data-bs-dismiss="modal">No</button>
                <button type="button" onclick="deleteskill()" class="btn applybutton" data-bs-dismiss="modal">Yes</button>    
            </div>
        </div>
    </div>
</div>
<!-- Modal for add skill -->
<div class="modal fade" id="Add" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">

    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Add Skill</h5>
            </div>
            <div class="modal-body d-flex flex-column align-items-center justufy-content-center">
                <div class="w-100">
                    <label class="form-label mt-2">Skill</label>
                    <input type="text" class="form-control" id="sname" placeholder="Enter Skill Name" required />
                    <span class="text-danger d-none" id="skillalert">Enter Valid Skillname</span>
                </div>
                <div class="w-100">
                    <label class="form-label mt-2">Status</label>
                    <select id='Status' class="form-select me-3" aria-label="Select Mission">
                            
                           <option value=0>Not Approve</option>
                            <option value=1>Approve</option>
                        </select>
                    <span class="text-danger d-none" id="status-alert">Enter Valid status</span>
                </div>
            </div>
            <div class="modal-footer">
                <div data-bs-dismiss="modal" onclick="clearModal()" style="cursor:pointer;" class="col-lg-2 col-md-3 col-sm-2 col-3 d-flex justify-content-center align-items-center border border-dark rounded-pill mt-2">
                    <span class="p-1 text-muted" style="white-space:nowrap;">Cancle</span>
                </div>
                <button type="submit"  style="border: 2px solid #F88634;border-radius: 100px;color: #F88634;padding-left: 20px; padding-right: 20px;" class="btn" onclick="addskill('edit-skill')">Save</button>
            </div>
        </div>
    </div>

</div>

<input id="skill-id" type="hidden" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="~/js/skillcms.js"></script>
<script>
    $(document).ready(function () {
        $.noConflict()
    $('#example').DataTable({
        pagingType: 'full_numbers',
    });
});
</script>