@{
    ViewData["title"] = "Admin";
    ViewData["css"] = "Volunteering_Timesheet.css";
}
@model CIPlatform.Entitites.ViewModel.BannerViewModel

<div class="row w-100" style="height:90vh;">
    <div class="col-lg-3 col-md-3 navigation col-sm-3">
        <partial name="Navigation_partial" />
    </div>
    <div class="col-lg-9 col-md-9 col-sm-9">
        <div class="container-fluid mt-5">
            <form asp-action="AddBanner" id="form" asp-controller="Admin" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for=BannerId />
                <div class="row main w-100">
                    <div class="col-lg-12 col-md-12 col-sm-12 profile-details">
                        <div class="w-100 border-bottom">
                            <h5>Banner Details</h5>
                        </div>
                        <div class="row mt-2">
                            <div class="col-lg-12">
                                <label class="form-label">Description</label><textarea placeholder="Enter Banner Text" asp-for=Text rows=3 class="form-control" id='bio'></textarea>
                                <span asp-validation-for=Text class="text-danger d-block"></span>
                            </div>
                            <div class="col-lg-6 mt-2 col-md-6 ">
                                <label class="form-label">Sort Order</label>
                                <input asp-for=SortOrder type="number" id="tseats" placeholder="Enter SortOrder" class="form-control time-hours" />
                                <span asp-validation-for=SortOrder class="text-danger d-block"></span>
                            </div>
                            <div class="col-lg-6 mt-2  col-md-6 ">
                                <label class="form-label">Mission Media</label>
                                <input type="file" asp-for=BannerImage  class="form-control time-hours" />
                            </div>
                            <div class="d-flex justify-content-end">
                                <button type="submit" style="border: 2px solid #F88634;border-radius: 100px;color: #F88634;padding-left: 20px; padding-right: 20px;" class="btn mt-4">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="mobile-navigation">
        <partial name="Mobile_Navigation_partial" />
    </div>
</div>
@section scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
    }